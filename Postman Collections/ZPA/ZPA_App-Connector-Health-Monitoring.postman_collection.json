	"item": [
		{
			"name": "1. Login into ZPA Tenant",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Capturing access token ",
							"const responseJson = pm.response.json();",
							"var access_token = responseJson.access_token;",
							"pm.environment.set(\"token\", access_token)"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "client_id",
							"value": "{{client_id}}",
							"type": "text"
						},
						{
							"key": "client_secret",
							"value": "{{client_secret}}",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "https://config.private.zscaler.com/signin",
					"protocol": "https",
					"host": [
						"config",
						"private",
						"zscaler",
						"com"
					],
					"path": [
						"signin"
					]
				}
			},
			"response": []
		},
		{
			"name": "2. Get All App Connector/s Health Status Details",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{token}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "https://config.private.zscaler.com/mgmtconfig/v1/admin/customers/288257368947425280/connector",
					"protocol": "https",
					"host": [
						"config",
						"private",
						"zscaler",
						"com"
					],
					"path": [
						"mgmtconfig",
						"v1",
						"admin",
						"customers",
						"288257368947425280",
						"connector"
					]
				}
			},
			"response": []
		},
		{
